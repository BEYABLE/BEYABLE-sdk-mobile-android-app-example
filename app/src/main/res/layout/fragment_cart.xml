<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cart.CartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/checkout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/light_background"
            android:gravity="end">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:layout_marginEnd="@dimen/padding_xbig"
                android:layout_marginTop="@dimen/padding_default"
                android:layout_marginBottom="@dimen/padding_default"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/checkout_container"
            android:padding="@dimen/padding_big">
            <TextView
                android:id="@+id/summary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Display1"
                android:text="Sommaire"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:id="@+id/subtotal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/subtotal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="€0.00"/>
                <TextView
                    android:id="@+id/subtotal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SubTotal"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/subtotal_value"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/promo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/promo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="0%"/>
                <TextView
                    android:id="@+id/promo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promotion"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/promo_value"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/shipping_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shipping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="€3.99"/>
                <TextView
                    android:id="@+id/shipping_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Livraison"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/shipping_value"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/total_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_xbig"
                android:paddingBottom="@dimen/padding_xbig">
                <TextView
                    android:id="@+id/total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:text="€3.99"/>
                <TextView
                    android:id="@+id/total_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total : "
                    android:textAlignment="textEnd"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/total_value"
                    android:layout_marginEnd="@dimen/padding_big"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/summary_container">
            <TextView
                android:id="@+id/order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Display1"
                android:text="Commande"
                android:textColor="@color/black"
                android:padding="@dimen/padding_big"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>